<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context=".MainLogin_Screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_otp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_bacckss" />


        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="@font/metropolis_semibold"
            android:text="We have sent an OTP to your Mobile"
            android:textAlignment="center"
            android:textColor="#4A4B4D"
            android:textSize="30dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/add_your_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_text"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="47dp"
            android:fontFamily="@font/metropolis_semibold"
            android:text="Please check your mobile number 071*****12 continue to reset your password"
            android:textAlignment="center"
            android:textColor="#7C7D7E"
            android:textSize="14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_your_details"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/one"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/rect"
                android:fontFamily="@font/metropolis_semibold"
                android:hint="*"
                android:textAlignment="center"
                android:textColorHint="#B6B7B7" />

            <EditText
                android:id="@+id/two"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="28dp"
                android:background="@drawable/rect"
                android:fontFamily="@font/metropolis_semibold"
                android:hint="*"
                android:textAlignment="center"
                android:textColorHint="#B6B7B7" />

            <EditText
                android:id="@+id/three"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="28dp"
                android:background="@drawable/rect"
                android:fontFamily="@font/metropolis_semibold"
                android:hint="*"
                android:textAlignment="center"
                android:textColorHint="#B6B7B7" />

            <EditText
                android:id="@+id/four"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="34dp"
                android:background="@drawable/rect"
                android:fontFamily="@font/metropolis_semibold"
                android:hint="*"
                android:textAlignment="center"
                android:textColorHint="#B6B7B7" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pre"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="362dp"
            android:background="@drawable/ic_rectangle_7"
            android:fontFamily="@font/metropolis_semibold"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/sign_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_pre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/metropolis_semibold"
            android:text="Didn't Receive? Click Here"
            android:textColor="#7C7D7E" />


    </RelativeLayout>


</LinearLayout>