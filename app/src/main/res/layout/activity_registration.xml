<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context=".MainLogin_Screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_bacckss" />


        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/metropolis_semibold"
            android:text="Sign Up"
            android:textColor="#4A4B4D"
            android:textSize="30dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/add_your_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Add your details to login"
            android:textColor="#7C7D7E"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/name_edt"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_below="@+id/add_your_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_rectangle_17278"
            android:fontFamily="@font/metropolis_semibold"
            android:hint="Name"
            android:paddingLeft="34dp"
            android:textColor="#6A6A6A"
            android:textColorHint="#B6B7B7"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/email_edt"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_below="@+id/name_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_rectangle_17278"
            android:fontFamily="@font/metropolis_semibold"
            android:hint="Email"
            android:paddingLeft="34dp"
            android:textColor="#6A6A6A"
            android:textColorHint="#B6B7B7"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/mobile_edt"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_below="@+id/email_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_rectangle_17278"
            android:fontFamily="@font/metropolis_semibold"
            android:hint="Mobile No"
            android:inputType="number"
            android:paddingLeft="34dp"
            android:textColor="#6A6A6A"
            android:textColorHint="#B6B7B7"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/add_edt"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_below="@+id/mobile_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_rectangle_17278"
            android:fontFamily="@font/metropolis_semibold"
            android:hint="Address"
            android:paddingLeft="34dp"
            android:textColor="#6A6A6A"
            android:textColorHint="#B6B7B7"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/password_edt"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_below="@+id/add_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_rectangle_17278"
            android:fontFamily="@font/metropolis_semibold"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="34dp"
            android:textColor="#6A6A6A"
            android:textColorHint="#B6B7B7"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/confirm_pass_edt"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_below="@+id/password_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_rectangle_17278"
            android:fontFamily="@font/metropolis_semibold"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="34dp"
            android:textColor="#6A6A6A"
            android:textColorHint="#B6B7B7"
            android:textSize="14dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_button"
            android:layout_width="307dp"
            android:layout_height="56dp"
            android:layout_below="@id/confirm_pass_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_rectangle_7"
            android:fontFamily="@font/metropolis_semibold"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/sign_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/metropolis_semibold"
            android:text="@string/already_have_an_account_login"
            android:textColor="#7C7D7E" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>


</ScrollView>